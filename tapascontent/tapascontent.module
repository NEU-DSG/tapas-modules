/**
 * Implements hook_node_postinsert().
 */
function tapascontent_node_postinsert($node) {
	$wrapper = Tapascontent_NodeWrapper::wrap_node($node);
	if ($wrapper) {
		_tapascontent_handle_upsert_result($wrapper->upsert());
	}
}

/**
 * Implements hook_node_postupdate().
 */
function tapascontent_node_postupdate($node) {
	$wrapper = Tapascontent_ProjectNodeWrapper::wrap_node($node);
	if ($wrapper) {
		_tapascontent_handle_upsert_result($wrapper->upsert());
	}
}

function _tapascontent_handle_upsert_result($result) {
	drupal_set_message($result);
}

/**
 * Implements hook_node_delete().

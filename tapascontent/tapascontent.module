/**
 * @internal Post-data common to Projects and Collections.
 *
 * @param node $node: the node we will be posting.
 * @return array: An array with the common values set.
 */

function _tapascontent_projcol_hydradata($node) {
	
	$result =  array(
		'uniqueid' => tapas_simple_fieldval($node, TAPAS_FIELD_PREFIX . 'slug'),
		'depositor' => $node->uid,
		'title' => $node->title,
		'description' => tapas_simple_fieldval($node, TAPAS_FIELD_PREFIX . 'description'),
		'access' => $node->group_access['und'][0]['value']?'private':'public',
	);

	$thumb_file = tapashydra_filestring_from_field($node, TAPAS_FIELD_PREFIX . 'thumbnail');
	if ($thumb_file) {
		$result['thumbnail'] = $thumb_file;
	}

	return $result;


}
/**
 * @internal Post-data for Records
 *
 * @param node $node: The containing the post info.
 * @param string $uniqueid: The (non-drupal node-id) persistant unique id.
 *
 * @return array: an array with the $data elements.
 */

function _tapascontent_record_hydradata($node, $uniqueid) {

	$collection_dids = tapashydra_php_to_http_array(
		_tapascontent_get_parent_slugs($node),
		'collection_dids'
	);

	//@TODO: filetype(s) temporarily hardcoded. 
	$filetypes = tapashydra_php_to_http_array(array('tapascontent'), 'file_types');
	drupal_set_message("filetypes: $filetypes");

	$data = array(
		'uniqueid' => $uniqueid,
		'collection_dids' => $collection_dids,
		'depositor' => $node->uid,
		'display_date' => tapas_simple_fieldval($node, TAPAS_FIELD_PREFIX . 'timeline_date'),
		'file_types' => $filetypes,
	);

	$array_fields = array(
		'tei_type' => 'file_types',
		'display_auth' => 'display_authors',
		'display_contrib' => 'display_contributors'
	);

	foreach($array_fields as $fieldname => $paramname) {
		$data[$paramname] = tapashydra_field_to_http_array(
			$node,
			TAPAS_FIELD_PREFIX . $fieldname,
			$paramname
		);
	}

	$tei_file = tapashydra_filestring_from_field($node, TAPAS_FIELD_PREFIX . 'tei_file');
	if($tei_file) {
		$data['tei'] = $tei_file;
	} else {
		drupal_set_message("Debug WARNING! tei field seems to be empty.");
	}
	
	return $data;

	//@todo $data['support_files']

}

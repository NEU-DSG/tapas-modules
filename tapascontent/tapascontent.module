function _tapascontent_watchdog($msg, $err_level = WATCHDOG_DEBUG) {
  watchdog('tapascontent', $msg, array(), $err_level);
}

function tapascpntent_do_bulk_upload($file_array) {
	foreach ($filearray as $file) {
		$node = Tapascontent_DrupalConnector::create_record();
		$wrapper = Tapascontent_ProjectNodeWrapper::wrap_node($node);
		$wrapper.set_fieldval('field_tapas_tei_file', $file);
		$wrapper.presave();
		$wrapper.upsert();
	}
}


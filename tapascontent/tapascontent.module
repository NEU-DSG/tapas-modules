/**
* Menu hook page callback.
*/
function add_viewhydra_action($type, $object) {


	$slug = _tapascontent_slug_from_nid($object->nid);

	drupal_set_message("slug is $slug");

	if ($object && $object->type == TAPAS_RECORD) {
		return '<h2>' . t('Hello') . '</h2>' . tapashydra_get_tei($slug, 'tei');
	} else {
		return '<h2>Not a record</h2>';
		return FALSE;
	}
}

